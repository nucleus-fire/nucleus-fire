[server]
port = ${PORT|3000}
host = "0.0.0.0"

[database]
url = "sqlite:site.db"

[app]
name = "Nucleus Framework"
env = "production"
secret_key = "site_secret"
admin_username = "${ADMIN_USERNAME|admin}"
admin_password = "${ADMIN_PASSWORD|secret}"


[performance]
compression = true
preconnect_origins = ["https://fonts.googleapis.com", "https://fonts.gstatic.com"]

[performance.fonts]
display_swap = true
preconnect = true
async_load = true
